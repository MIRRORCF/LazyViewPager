<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="#E9372F"/>

    <com.mirror.lazyviewpager.LazySlidingTabLayout
        android:id="@+id/slidingTabLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        tl:tl_indicator_color="#E9372F"
        tl:tl_indicator_height="2dp"
        tl:tl_indicator_width_equal_title="false"
        tl:tl_tab_space_equal="true"
        tl:tl_textBold="SELECT"
        tl:tl_underline_color="#F4F4F4"
        tl:tl_underline_height="1dp"
        tl:tl_divider_width="1dp"
        tl:tl_divider_color="#F4F4F4"
        tl:tl_divider_padding="0dp"
        tl:tl_textSelectColor="#E9372F"
        tl:tl_textUnselectColor="#333333">


    </com.mirror.lazyviewpager.LazySlidingTabLayout>

    <com.mirror.lazyviewpager.LazyViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"/>

</LinearLayout>